{
    "manifest_version": 2,
    "name": "Show me the meaning",
    "version": "1.1",
    "description": "This English dictionary app will show the definition of double-clicked words",
    "icons": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "permissions": [
      "activeTab",
      "<all_urls>"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_icon": "icons/icon-96.png",
      "default_title": "Show me the meaning"
    }
  }